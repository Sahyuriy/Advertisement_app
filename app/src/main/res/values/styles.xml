<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D2691E</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#696969</item>
    </style>


    <!--<style name="TextColor">-->
        <!--<item name="android:textColor">#000000</item>-->
        <!--<item name="android:textStyle">bold</item>-->
    <!--</style>-->
    <!--<style name="TextColor.TextSize">-->
        <!--<item name="android:textSize">18sp</item>-->
    <!--</style>-->

    <style name="AppItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppItems.btn">
        <item name="android:background">@drawable/btn</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/btn_margin</item>
    </style>
    <style name="AppItems.btn.small">
        <item name="android:layout_width">70dp</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="AppItems.et">
        <item name="android:layout_width">@dimen/et_width</item>
        <item name="android:layout_height">@dimen/et_height</item>
    </style>
    <style name="AppItems.et.adv">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppItems.tv">
        <item name="android:layout_marginTop">@dimen/btn_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppItems.tv.small">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AppItems.tv.title">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppItems.icons">
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppItems.line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/round</item>
    </style>

</resources>
