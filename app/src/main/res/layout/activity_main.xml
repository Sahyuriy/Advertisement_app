<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"

    android:orientation="vertical"
    tools:context="com.example.sah.advertisement_app.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_padding">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_show"
                    style="@style/AppItems.btn"
                    android:layout_width="@dimen/img_size"
                    android:layout_height="@dimen/m_size"
                    android:layout_marginTop="@dimen/zero"
                    android:text="@string/btn_show" />

                <!--android:layout_marginLeft="@dimen/btn_margin"-->

                <ImageButton
                    android:id="@+id/btn_new"
                    android:layout_width="@dimen/m_size"
                    android:layout_height="@dimen/m_size"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/zero"
                    android:background="@drawable/img_btn"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />
                <!--android:visibility="gone"-->
            </FrameLayout>

            <LinearLayout
                style="@style/AppItems.line"
                android:layout_marginTop="@dimen/marginTop" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fragm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/fragm_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_signal"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:layout_gravity="center"
            android:src="@drawable/no_signal"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
