<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context="com.example.sah.advertisement_app.auth.RegistrationActivity">

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/et_my_email"
        android:hint="Email"
        android:layout_width="250dp"
        android:layout_height="50dp" />
    <EditText
        android:hint="Password"
        android:id="@+id/et_my_pass"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Вы собираетесь:"
        android:layout_marginTop="20dp"/>

    <RadioButton
        android:id="@+id/rb_user"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Смотреть рекламу"/>
    <RadioButton
        android:id="@+id/rb_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Размещать рекламу"/>


    <Button
        android:id="@+id/btn_registration"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:text="Зарегестрироваться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
