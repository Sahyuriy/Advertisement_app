<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="@dimen/activity_padding"
    tools:context="com.example.sah.advertisement_app.auth.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/AppItems.tv"
            android:text="@string/tv_name" />

        <LinearLayout
            style="@style/AppItems"
            android:orientation="horizontal">

            <EditText
                style="@style/AppItems.et"
                android:id="@+id/et_my_name"
                android:hint="@string/hint_name"
                android:inputType="textPersonName" />

            <ImageView
                style="@style/AppItems.icons"
                android:id="@+id/iv_check_name"/>
        </LinearLayout>

        <TextView
            style="@style/AppItems.tv"
            android:text="@string/tv_email" />

        <LinearLayout
            style="@style/AppItems"
            android:orientation="horizontal">

            <EditText
                style="@style/AppItems.et"
                android:id="@+id/et_my_email"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress" />

            <ImageView
                style="@style/AppItems.icons"
                android:id="@+id/iv_check"/>
        </LinearLayout>


        <TextView
            style="@style/AppItems.tv"
            android:text="@string/tv_pass" />

        <LinearLayout
            style="@style/AppItems"
            android:orientation="horizontal">

            <EditText
                style="@style/AppItems.et"
                android:id="@+id/et_my_pass"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

            <ImageView
                style="@style/AppItems.icons"
                android:id="@+id/iv_check_pass"/>
        </LinearLayout>

        <TextView
            style="@style/AppItems.tv.small"
            android:text="@string/tv_text" />

        <TextView
            style="@style/AppItems.tv"
            android:text="@string/tv_pass_confirm" />

        <LinearLayout
            style="@style/AppItems"
            android:orientation="horizontal">

            <EditText
                style="@style/AppItems.et"
                android:id="@+id/et_pass_conf"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

            <ImageView
                style="@style/AppItems.icons"
                android:id="@+id/iv_pass_conf"/>
        </LinearLayout>

        <TextView
            style="@style/AppItems.tv"
            android:text="@string/tv_choise" />

        <RadioGroup
            style="@style/AppItems"
            android:id="@+id/rg">

            <RadioButton
                style="@style/AppItems"
                android:id="@+id/rb_user"
                android:text="@string/rb_watch" />

            <RadioButton
                style="@style/AppItems"
                android:id="@+id/rb_advertiser"
                android:text="@string/rb_add" />

        </RadioGroup>

        <Button
            style="@style/AppItems.btn"
            android:id="@+id/btn_registration"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_reg" />
    </LinearLayout>

</ScrollView>
