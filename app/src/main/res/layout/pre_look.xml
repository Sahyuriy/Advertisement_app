<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pre_look"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/pre_item"
    android:orientation="vertical"
    android:padding="2dip">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pre_title"
            style="@style/AppItems.tv.title"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/pre_image"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/marginTop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pre_descr"
            style="@style/AppItems.tv" />

    </LinearLayout>
    <!--</ScrollView>-->
</ScrollView>